# =================================
# TELEGRAM PARSER CONFIGURATION
# =================================

# Telegram API credentials (get from https://my.telegram.org)
TELEGRAM_API_ID=example
TELEGRAM_API_HASH=example
TELEGRAM_PHONE=+example

# Bot configuration
BOT_TOKEN=example
BOT_PASSWORD=example
ADMIN_USER_ID=example

# Parser settings
CHECK_INTERVAL=60  # seconds between checks
MAX_CHATS=15      # maximum number of chats to monitor
KEYWORDS="ключевое слово 1, keyword 2, слово 3"

# Database settings
DATABASE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=example
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tgspybot.log

# Security
ENCRYPTION_KEY=generate_random_32_byte_key
SESSION_ENCRYPTION=true

# Monitoring and notifications
NOTIFICATION_CHAT_ID=-example
ERROR_NOTIFICATION=true

# Rate limiting
API_RATE_LIMIT=30  # requests per minute
FLOOD_WAIT_THRESHOLD=300  # seconds

# Docker settings
TZ=Europe/Moscow 
